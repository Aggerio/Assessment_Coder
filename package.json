{
  "name": "assessment-coder",
  "version": "1.0.0",
  "description": "An Electron application for screen capture and AI analysis",
  "main": "main.js",
  "homepage": "./",
  "author": {
    "name": "Assessment Coder",
    "email": "assessmentcoder@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "test-auth": "node test-auth.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "build:mac-safe": "hdiutil detach /dev/disk10 2>/dev/null || true && electron-builder --mac",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "pack:win": "electron-builder --win --dir",
    "pack:mac": "electron-builder --mac --dir",
    "pack:linux": "electron-builder --linux --dir",
    "cleanup-dmg": "hdiutil detach /dev/disk10 2>/dev/null || true && hdiutil detach /dev/disk11 2>/dev/null || true && hdiutil detach /dev/disk12 2>/dev/null || true"
  },
  "build": {
    "appId": "com.assessmentcoder.app",
    "productName": "Assessment Coder",
    "directories": {
      "output": "dist"
    },
    "asarUnpack": [
      "**/node_modules/screenshot-desktop/**/*",
      "**/node_modules/@nut-tree-fork/**/*",
      "**/node_modules/libnut/**/*",
      "**/node_modules/jimp/**/*",
      "**/node_modules/@jimp/**/*",
      "**/node_modules/temp/**/*",
      "**/node_modules/mac-screen-capture-permissions/**/*",
      "**/node_modules/node-fetch/**/*",
      "**/node_modules/openai/**/*",
      "**/node_modules/screenshot-desktop/**/*",
      "**/node_modules/electron/**/*",
      "**/node_modules/electron-builder/**/*",
      "**/node_modules/electron-builder-squirrel-helper/**/*",
      "**/node_modules/electron-builder-squirrel-helper-win/**/*",
      "**/node_modules/electron-builder-squirrel-helper-mac/**/*",
      "**/node_modules/electron-builder-squirrel-helper-linux/**/*",
      "**/node_modules/electron-is-dev/**/*",
      "**/node_modules/electron-log/**/*",
      "**/node_modules/electron-updater/**/*",
      "**/node_modules/electron-updater-windows/**/*",
      "**/node_modules/electron-updater-mac/**/*",
      "**/node_modules/electron-updater-linux/**/*",
      "**/node_modules/electron-updater-windows-store/**/*",
      "**/node_modules/electron-updater-mac-store/**/*",
      "**/node_modules/electron-updater-linux-store/**/*",
      "**/node_modules/file-type/**/*",
      "**/node_modules/punycode/**/*",
      "**/node_modules/tr46/**/*",
      "**/node_modules/webidl-conversions/**/*",
      "**/node_modules/whatwg-url/**/*",
      "**/node_modules/token-types/**/*"
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "allowElevation": true,
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png",
      "installerHeaderIcon": "assets/icon.png",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "include": "build/installer.nsh"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "Assessment Coder ${version}",
      "icon": "assets/icon.png",
      "sign": false,
      "format": "ULFO",
      "background": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@isaacs/balanced-match": "^4.0.1",
    "@isaacs/brace-expansion": "^5.0.0",
    "@jimp/core": "^1.6.0",
    "@jimp/custom": "^0.22.12",
    "@jimp/plugin-crop": "^0.22.12",
    "@jimp/plugin-flip": "^0.22.12",
    "@jimp/plugin-gaussian": "^0.22.12",
    "@jimp/plugin-invert": "^0.22.12",
    "@jimp/plugin-resize": "^1.6.0",
    "@jimp/plugin-rotate": "^1.6.0",
    "@jimp/plugin-scale": "^0.22.12",
    "@jimp/types": "^1.6.0",
    "@jimp/utils": "^1.6.0",
    "@nut-tree-fork/default-clipboard-provider": "^4.2.6",
    "@nut-tree-fork/libnut": "^4.2.6",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@nut-tree-fork/provider-interfaces": "^4.2.6",
    "@nut-tree-fork/shared": "^4.2.6",
    "add": "^2.0.6",
    "canary": "^0.3.2",
    "core.js": "^0.4.2",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.0",
    "file-type": "16.5.4",
    "glob": "^11.0.3",
    "jimp": "^0.22.12",
    "lru-cache": "^11.1.0",
    "mac-screen-capture-permissions": "^2.1.0",
    "minimatch": "^10.0.3",
    "minipass": "^7.1.2",
    "mkdirp": "^3.0.1",
    "node-fetch": "^2.7.0",
    "openai": "^4.24.1",
    "path-scurry": "^2.0.0",
    "pnpm": "^10.14.0",
    "punycode": "^2.3.1",
    "rimraf": "^6.0.1",
    "screenshot-desktop": "^1.15.0",
    "temp": "^0.9.4",
    "tinycolor2": "^1.6.0",
    "tr46": "^5.1.1",
    "webidl-conversions": "^7.0.0",
    "whatwg-url": "^14.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "pnpm": {
    "overrides": {
      "file-type": "16.5.4",
      "token-types": "5.0.0",
      "punycode": "2.3.1",
      "tr46": "5.1.1",
      "webidl-conversions": "7.0.0",
      "whatwg-url": "14.2.0",
      "zod": "3.23.8"
    }
  }
}
